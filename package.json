{
  "name": "vite-react-typescript-tailwindcss",
  "description": "A Vite + React + TypeScript + TailwindCSS boilerplate (using pnpm) with DX in mind",
  "keywords": [
    "react",
    "reactjs",
    "vite",
    "vitejs",
    "typescript",
    "pnpm",
    "template",
    "boilerplate",
    "tailwindcss",
    "prettier",
    "eslint",
    "husky",
    "lint-staged"
  ],
  "homepage": "https://github.com/bkchu/vite-react-typescript-tailwindcss",
  "private": true,
  "version": "0.0.1",
  "author": {
    "name": "Brandon Chung",
    "email": "brandon@bkchu.dev",
    "url": "https://github.com/bkchu"
  },
  "scripts": {
    "dev": "vite --port 8080",
    "build": "tsc && vite build",
    "preview": "pnpm build && vite preview",
    "prepare": "husky install",
    "pre-commit": "lint-staged"
  },
  "dependencies": {
    "react": "^18.0.0",
    "react-dom": "^18.0.0"
  },
  "devDependencies": {
    "@trivago/prettier-plugin-sort-imports": "^3.2.0",
    "@types/react": "^18.0.0",
    "@types/react-dom": "^18.0.0",
    "@typescript-eslint/eslint-plugin": "^5.22.0",
    "@typescript-eslint/parser": "^5.22.0",
    "@vitejs/plugin-react": "^1.3.0",
    "autoprefixer": "^10.4.7",
    "eslint": "^8.15.0",
    "eslint-config-kentcdodds": "^20.2.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-react": "^7.29.4",
    "husky": "^7.0.4",
    "lint-staged": "^12.4.1",
    "postcss": "^8.4.13",
    "prettier": "^2.6.2",
    "prettier-plugin-tailwindcss": "^0.1.10",
    "tailwindcss": "^3.0.24",
    "typescript": "^4.6.3",
    "vite": "^2.9.7"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --cache --fix",
      "prettier --write"
    ],
    "*.{css,scss,md,mdx,json}": "prettier --write"
  }
}
